!!!
%html{:lang => "es"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{content: 'width=device-width, initial-scale=1.0, minimum-scale=1.0', name: 'viewport'}
    %title Cerrada del Oro

    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'

    %link{rel: "apple-touch-icon", sizes: "180x180", href: "/images/icons/apple-touch-icon.png" }
    %link{rel: "icon", type: "image/png", sizes: "32x32", href: "/images/icons/favicon-32x32.png" }
    %link{rel: "icon", type: "image/png", sizes: "16x16", href: "/images/icons/favicon-16x16.png" }
    %link{rel: "manifest", href: "/images/icons/manifest.json" }
    %link{rel: "mask-icon", href: "/images/icons/safari-pinned-tab.svg", color: "#5bbad5" }
    %meta{name:"theme-color", content:"#ffffff" }

    %link{ rel: 'stylesheet', href: 'https://fonts.googleapis.com/icon?family=Material+Icons' }
    %link{ rel: 'stylesheet', href: 'https://code.getmdl.io/1.3.0/material.pink-cyan.min.css' }

  %body.mdl-app.mdl-color--grey-100.mdl-color-text--grey-700.mdl-base
    .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      %header.mdl-layout__header.mdl-layout__header--scroll.mdl-color--primary
        // Title
        .mdl-layout--large-screen-only.mdl-layout__header-row
        .mdl-layout--large-screen-only.mdl-layout__header-row
          = image_tag "cerrada-del-oro-white.png", class: 'top-logo'

        // Tabs
        .mdl-layout__tab-bar.mdl-js-ripple-effect.mdl-color--primary-dark
          = link_to "Inicio", root_path, class: active_tab?(root_path)
          = link_to "Reportes", reports_path, class: active_tab?(reports_path)

          %button#logout.mdl-button.mdl-js-button.mdl-button--icon.logout
            %i.material-icons more_vert

          %ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect{ for: "logout" }
            %li.mdl-menu__item
              = link_to "Cerrar Sesi√≥n", destroy_user_session_path, method: :delete

      %main.mdl-layout__content
        .mdl-layout__tab-panel.is-active
          = yield

      %footer.mdl-mini-footer
        .mdl-mini-footer__left-section
          .mdl-logo Cerrada del Oro
          %ul.mdl-mini-footer__link-list
            %li
              = link_to "Inicio", root_path
            %li
              = link_to "Reportes", reports_path

    = javascript_include_tag 'application'
    = yield :javascript
